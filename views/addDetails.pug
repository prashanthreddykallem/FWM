html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto:300,400,500,700', type='text/css')
        link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
        style
            include ./css/stylehp.css            
            include ./css/material.min.css            
        script
            include ./css/material.min.js
        //- title  Faculty Workshop Management
        - var username = JSON.parse(name)
    body
        .main
            h1= "Add New Workshop Details"
            h8= "All Fields Required"          
            form.complaint-form(action='/submitAdd', method='POST')
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                    input#title.mdl-textfield__input(type='text', name='title', value="" required)
                    label.mdl-textfield__label(for='title') Title
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                    input#duration.mdl-textfield__input(type='text', name='duration', value="" required)
                    label.mdl-textfield__label(for='duration') Duration
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                    input#organized.mdl-textfield__input(type='text', name='organized', value="" required)
                    label.mdl-textfield__label(for='organized') Organized by (Enter '-' if No value)
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                    input#sponsored.mdl-textfield__input(type='text', name='sponsored', value="" required)
                    label.mdl-textfield__label(for='sponsored') Sponsored by (Enter '-' if No value)
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                    input#fees.mdl-textfield__input(type='text', name='fees', pattern='[0-9]*', value="" required)
                    label.mdl-textfield__label(for='fees') Fees 
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                    input#fees.mdl-textfield__input(type='text', name='date', value="" required pattern='[0-9]{1,2}(/|-)[0-9]{1,2}(/|-)[0-9]{4}')
                    label.mdl-textfield__label(for='date') Date (in dd/mm/yyyy format)
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                    input#fees.mdl-textfield__input(type='hidden', name='username', value=`${JSON.stringify(username).replace(/"/g,"")}`)
                    //- label.mdl-textfield__label(for='username') username
                div
                    button.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored.butn(type='submit') Submit
